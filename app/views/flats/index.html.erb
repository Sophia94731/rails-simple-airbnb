<h2>All our flat (<%= @flats_count%>)</h2>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4 mb-3">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= flat.address%></h6>
              <p class="card-text"><%= flat.description %></p>
              <p class="card-text"><small class="text-muted"><%= flat.price_per_night %></small></p>
              <p class="card-text"><small class="text-muted"><%= flat.number_of_guests %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
